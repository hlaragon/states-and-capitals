<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/mintCream"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aragon.hazel.statesandcapitals.ScoreActivity"
    tools:showIn="@layout/activity_score">

    <TextView
        android:id="@+id/textViewScoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/highScoresTitle"
        android:textSize="16pt"
        android:fontFamily="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewNamesList"
        android:layout_width="wrap_content"
        android:layout_height="500px"
        android:text="Name"
        android:textSize="11pt"
        android:fontFamily="serif"
        android:singleLine="false"
        android:scrollbars="vertical"
        android:textColor="@color/blue"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textViewScoreTitle" />

    <TextView
        android:id="@+id/textViewScoreList"
        android:layout_width="wrap_content"
        android:layout_height="500px"
        android:text="Score"
        android:textSize="11pt"
        android:fontFamily="serif"
        android:singleLine="false"
        android:scrollbars="vertical"
        android:textColor="@color/blue"
        android:gravity="right"
        android:layout_alignTop="@+id/textViewNamesList"
        android:layout_toEndOf="@+id/buttonBack" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backToMenu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
